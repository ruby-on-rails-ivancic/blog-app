<div class="show-container">
  <div class="article-container">
    <div class="article-card flex-center">
      <h1><%= @article.title %></h1>

      <p><%= @article.body %></p>
    </div>

    <div class="article-edit-options">
    <%= link_to "Edit Article", edit_article_path(@article) %></li>
    <%= link_to "All articles", articles_path %></li>   
    <%= link_to "Destroy", article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %>
    </div>
  </div>
  


  <h2>Comments</h2>
  <%= render @article.comments %>


  <h2>Add a comment</h2>
  <%= render "comments/form", article: @article %>
</div>
