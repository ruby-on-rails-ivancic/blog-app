
<div class="index-title">
    <h1>Articles</h1>
    <p>Our blog has <%= Article.public_count %> articles and counting!</p>
</div>


<div class="article-list flex-center">
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <div class="article-card flex-center">
                <%= link_to article.title, article, class: "article_title" %>
                <p><%= truncate(article.body, length: 200) %></p>
            </div>
        <% end %>
    <% end %>
    <%= link_to "New Article", new_article_path, class: "new-article" %>
</div>





